@{
    Layout = "_Layout";
    ViewBag.Tittle = "Listagem de Garçons";

    var pessoas = ViewBag.Pessoas;
}
<div class="container">
    <div class="mt-3">
        <a class="btn btn-primary px-5" href="/garcom/inserir">
            <i class="bi bi-plus-circle me-1 align-items-center"></i>
            Inserir Novo Garçom
        </a>
        @if (ViewBag.Mensagem != null)
        {
            <span id="notification" class="badge bg-success text-white">
                @ViewBag.Mensagem
            </span>
        }
    </div>

    <div class="row mt-3 p-4 gap-2 bg-light shadow bg-body rounded justify-content-around">
        @foreach (var garcom in pessoas)
        {
            <div class="card col-md-5 col-lg-4 col-xl-3">
                <div class="card-body p-4">
                    <div class="row row-cols-2">
                        <label class="card-title fs-6 fw-semibold">@garcom.ToString()</label>


                        <div class="text-end d-flex ">
                            <a class="btn btn-secondary btn-sm" href="/garcom/detalhes/@garcom.Id">
                                <i class="bi bi-search"></i>
                            </a>

                            <a class="btn btn-primary btn-sm" href="/garcom/editar/@garcom.Id">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a class="btn btn-danger btn-sm" href="/garcom/excluir/@garcom.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                    <br/>
                    <p class="card-subtitle fs-6 text-body-secondary"><strong>Id:</strong> [@garcom.Id]</p>
                    <p class="card-subtitle fs-6 text-body-secondary">
                        <strong>CPF:</strong> @garcom.Cpf
                    </p>
                </div>

            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const notification = document.getElementById("notification");

        if (notification.textContent) {
            setTimeout(function() {
                notification.style.display = 'none';
            }, 3000);
        }
    });
</script>
}