@using System.Runtime.CompilerServices
@using Azure
﻿@{
    Layout = "_Layout";
    ViewBag.tittle = "Listagem de Mesas";

    var mesas = ViewBag.Mesas;
}

<div class="container">

    @* Cabeçalho *@
    <div class="mt-3">
        <a id="btnInserir" class="btn btn-primary px-4" href="/mesa/inserir">
            <i class="bi bi-plus-circle"></i>
            Inserir Nova Mesa
        </a>
        @if (ViewBag.Mensagem != null)
        {
            <span id="notification" class="badge bg-success text-white">
                @ViewBag.Mensagem
            </span>
        }
    </div>

    @* Lista *@


    <div class="row mt-3 p-4 gap-2 bg-light shadow bg-body rounded justify-content-around">
        @foreach (var mesa in mesas)
        {
            <div class="card col-md-5 col-lg-4 col-xl-3">
                <div class="card-body">
                    <div class="row row-cols-2">
                        <label class="card-tittle fs-5 fw-semibold">Mesa: @mesa.NumeroDaMesa</label>

                        <div class="text-end d-flex justify-content-around flex-nowrap">

                            <a class="btn btn-secondary btn-sm" href="/mesa/detalhar/@mesa.Id">
                                <i class="bi bi-search"></i>
                            </a>

                            <a class="btn btn-danger btn-sm" href="/mesa/excluir/@mesa.Id">
                                <i class="bi bi-trash3"></i>
                            </a>

                        </div>
                    </div>
                    <p class="card-subtittle fs-6"><strong>Id:</strong> [@mesa.Id]</p>
                    <p class="card-subtittle fs-6"><strong>Status:</strong>[@(mesa.Status ? "Ocupada" : "Desocupada")]</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
    document.addEventListener("DOMContentLoaded", function() {
        const notification = document.getElementById("notification");

        if (notification.textContent) {
            setTimeout(function() {
                notification.style.display = 'none';
            }, 3000);
        }
    });
</script>
}