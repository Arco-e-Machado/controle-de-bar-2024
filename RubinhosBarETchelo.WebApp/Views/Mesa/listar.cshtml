﻿@{
    var mesas = ViewBag.Mesas;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Listagem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <div class="container">

    @* Cabeçalho *@
    <div class="mt-3">
        <a class="btn btn-primary px-4" href="/mesa/inserir">
            <i class="bi bi-plus-circle"></i>
            Inserir Nova Mesa
        </a>
    </div>

        @* Lista *@


<div class="row mt-3 p-4 gap-2 bg-light shadow bg-body rounded justify-content-around">
            @foreach (var mesa in mesas){
                <div class="card col-md-5 col-lg-4 col-xl-3">
                     <div class="card-body">
                        <div class="row row-cols-2">
                            <label class="card-tittle fs-5 fw-semibold">Mesa: @mesa.NumeroDaMesa</label>

                            <div class="text-end d-flex flex-nowrap">

                                <a class="btn btn-secondary btn-sm" href="/mesa/detalhar/@mesa.Id">
                                    <i class="bi bi-search"></i>
                                </a>

                                <a class="btn btn-primary btn-sm" href="/mesa/editar/@mesa.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a class="btn btn-danger btn-sm" href="/mesa/excluir/@mesa.Id">
                                    <i class="bi bi-trash3"></i>
                                </a>

                             </div>
                        </div>
                             <p class="card-subtittle fs-6"><strong>Id:</strong> [@mesa.Id]</p>
                             <p class="card-subtittle fs-6"><strong>Status:</strong>[@(mesa.Status ? "Ocupada" : "Desocupada")]</p>
                    </div>
                </div>
            }
    </div>
</div>


</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>