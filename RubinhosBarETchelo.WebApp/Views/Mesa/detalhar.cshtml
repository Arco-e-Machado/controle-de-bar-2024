@{
    var mesa = ViewBag.mesa;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title></title>
</head>
<body>
    <div class="container bd-highlight">
      <div class="row">
        <div class="col card m-5 p-4 gap-2 bg-light shadow bg-body rounded">
            <div class="d-flex justify-content-between">
            <h1>Detalhes da Mesa</h1>
            <a class="btn btn-secondary ps-3 align-content-center" href="/mesa/listar">
                <i class="bi bi-arrow-return-left me-1"></i>
            </a>
            </div>
            
            <div class="list-group">
                <div class="list-group-item list-group-item-action"><div class="fw-bold ">Id:</div>@mesa.Id</div>
                <div class="list-group-item list-group-item-action"><div class="fw-bold ">Número:</div>@mesa.NumeroDaMesa</div>
                    @if (mesa.Status == true)
                    {
                        <div class="list-group-item list-group-item-action bg-danger"><div class="fw-bold ">Status:</div>@(mesa.Status ? "Ocupada" : "Desocupada")</div>
                    }
                    else
                    {
                        <div class="list-group-item list-group-item-action"><div class="fw-bold ">Status:</div>@(mesa.Status ? "Ocupada" : "Desocupada")</div>
                    }

    </div>

                @if (mesa.Comandas.Count > 0)
                {
            <div class="mt-3">
                <h5>Contas relacionadas à mesa:</h5>
                <ul class="list-group">
                            @foreach (var comanda in mesa.Comandas)
                            {
                            <li class="list-group-item">@comanda.ToString()</li>
                            }
                </ul>
            </div>
                }
    </div>
    </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>